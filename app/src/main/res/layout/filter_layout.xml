<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioGroup
        android:id="@+id/filter_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/allComics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="16sp"
            android:buttonTint="@color/light_red"
            android:fontFamily="sans-serif-medium"
            android:text=" All Comics" />

        <RadioButton
            android:id="@+id/thisWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="16sp"
            android:buttonTint="@color/light_red"
            android:fontFamily="sans-serif-medium"
            android:text=" Released this week" />

        <RadioButton
            android:id="@+id/lastWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="16sp"
            android:buttonTint="@color/light_red"
            android:fontFamily="sans-serif-medium"
            android:text="Released last week" />

        <RadioButton
            android:id="@+id/nextWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="16sp"
            android:buttonTint="@color/light_red"
            android:fontFamily="sans-serif-medium"
            android:text=" Releasing next week" />

        <RadioButton
            android:id="@+id/thisMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="16sp"
            android:buttonTint="@color/light_red"
            android:fontFamily="sans-serif-medium"
            android:text="Release this month" />

    </RadioGroup>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/filterCancel"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/filter_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/filterSave"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/filter_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="25dp" />

</androidx.constraintlayout.widget.ConstraintLayout>